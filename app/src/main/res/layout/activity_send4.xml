<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".send.Send4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:gravity="center"
                style="@style/textHeadline1"
                android:text="받으실 분의 은행을\n 눌러주세요"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/btnacf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:background="@color/gray3_number_selected"
                    android:text="농협" />

                <Button
                    android:id="@+id/kb"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:background="@drawable/send4_bg"
                    android:text="국민은행" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <Button
                    android:id="@+id/btnkab"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:background="@drawable/send4_bg"
                    android:text="카카오뱅크" />

                <Button
                    android:id="@+id/btnsb"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:background="@drawable/send4_bg"
                    android:text="신한은행" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <Button
                    android:id="@+id/btnwb"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:background="@drawable/send4_bg"
                    android:text="우리은행" />

                <Button
                    android:id="@+id/btnib"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:background="@drawable/send4_bg"
                    android:text="IBK기업은행" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <Button
                    android:id="@+id/btnhab"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:background="@drawable/send4_bg"
                    android:text="하나은행" />

                <Button
                    android:id="@+id/btnkfcb"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:background="@drawable/send4_bg"
                    android:text="새마을금고" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="5dp">

        <Button
            android:id="@+id/send4_btFinish"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:text="뒤로"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/setcheck_cancel" />

        <Button
            android:id="@+id/send4_btCancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="40dp"
            android:text="계속"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/setcheck_main"
            />
    </LinearLayout>

</LinearLayout>