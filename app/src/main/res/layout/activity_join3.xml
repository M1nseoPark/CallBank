<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".login.join3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/joins1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:text="아래의 번호로"
                android:textColor="@color/black"
                android:textSize="35dp" />
            <TextView
                android:id="@+id/joins2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:text="돈을 보낸 내역이"
                android:textColor="@color/black"
                android:textSize="35dp" />
            <TextView
                android:id="@+id/joins3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="전송됩니다"
                android:textColor="@color/black"
                android:textSize="35dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical" >


                <EditText
                    android:id="@+id/protector"
                    android:layout_width="341dp"
                    android:layout_height="67dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:hint=" 수신인의 이름을 적어주세요"
                    android:inputType="textPersonName"
                    android:text="" />


                <EditText
                    android:id="@+id/PPhone"
                    android:layout_width="338dp"
                    android:layout_height="63dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:hint="전화번호를 적어주세요"
                    android:inputType="textPassword"
                    android:text="" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Noneed"
                    android:layout_width="302dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/box_function"
                    android:text="넘어가기"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/back"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/box_function"
                        android:text="뒤로"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/next"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/box_function"
                        android:text="계속"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>